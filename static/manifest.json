{
  "applications": {
    "gecko": {
      "id": "glodastrophe@visophyte.org",
      "strict_min_version": "49.0a1"
    }
  },
  "browser_action": {
    "browser_style": false,
    "default_icon": "glast-64.png",
    "default_title": "Glodastrophe"
  },
  "sidebar_action": {
    "default_title": "Glodastrophe Sidebar",
    "default_panel": "sidebar.html#/sidebar",
    "default_icon": "glast-64.png"
  },
  "description": "Technically a Messaging Client",
  "homepage_url": "https://github.com/asutherland/glodastrophe",
  "icons": {
    "64": "glast-64.png"
  },
  "manifest_version": 2,
  "name": "Glodastrophe",
  "version": "0.2",
  "background": {
    "scripts": ["backend-main.js"]
  },
  "permissions": [
    "https://phabricator.services.mozilla.com/*",
    "https://bugzilla.mozilla.org/*",
    "<all_urls>",
    "unlimitedStorage"
  ]
}
